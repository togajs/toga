{
  "name": "@toga/monorepo",
  "private": true,
  "author": "Shannon Moeller <me@shannonmoeller.com> (shannonmoeller.com)",
  "homepage": "http://togajs.com",
  "repository": "togajs/toga",
  "license": "MIT",
  "scripts": {
    "benchmark": "run-s build && node packages/tunic/benchmark",
    "build": "run-s build-*",
    "build-clean": "lerna exec -- del dist",
    "build-node": "lerna exec -- babel src -d dist",
    "lint": "run-s lint-*",
    "lint-prettier": "prettier --ignore-path .gitignore --write '**/*.{css,js}'",
    "lint-eslint": "eslint --ignore-path .gitignore --fix '**/*.js'",
    "lint-stylelint": "stylelint --ignore-path .gitignore --fix '**/*.css'",
    "report": "nyc report -r text-lcov | coveralls",
    "test": "nyc run-s test-*",
    "test-node": "tape -r babel-polyfill -r babel-register 'packages/*/test/*.js' | tap-diff",
    "precommit": "run-s lint && git add .",
    "prepublish": "run-s build",
    "postinstall": "lerna bootstrap"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-register": "^6.26.0",
    "benchmark": "^2.1.4",
    "blue-tape": "^1.0.0",
    "coveralls": "^3.0.0",
    "del-cli": "^1.1.0",
    "doc-tree": "^0.12.2",
    "eslint": "^4.9.0",
    "eslint-config-prettier": "^2.6.0",
    "eslint-config-whim": "^3.0.0",
    "highlight.js": "^9.12.0",
    "husky": "^0.14.3",
    "lerna": "^2.4.0",
    "npm-run-all": "^4.1.1",
    "nyc": "^11.2.1",
    "prettier": "^1.7.4",
    "stylelint": "^8.2.0",
    "stylelint-config-prettier": "^1.0.2",
    "stylelint-config-whim": "^2.0.0",
    "tap-diff": "^0.1.1",
    "vinyl-rw": "^3.0.1"
  },
  "babel": {
    "plugins": [
      "transform-object-rest-spread"
    ],
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": 4
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "whim",
      "prettier"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 8
    },
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    }
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "useTabs": true,
    "overrides": [
      {
        "files": "*.json",
        "options": {
          "useTabs": false
        }
      }
    ]
  },
  "stylelint": {
    "root": true,
    "extends": [
      "stylelint-config-whim",
      "stylelint-config-prettier"
    ]
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "**/src/**"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "engines": {
    "node": ">=4",
    "npm": ">=2"
  }
}
