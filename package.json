{
  "name": "toga",
  "version": "0.5.1",
  "description": "The streaming documentation generator.",
  "keywords": [
    "toga",
    "generator",
    "documentation",
    "docblock",
    "docs",
    "reference",
    "styleguide"
  ],
  "homepage": "https://togajs.com",
  "bugs": "https://github.com/togajs/toga/issues",
  "license": "MIT",
  "author": "Shannon Moeller <me@shannonmoeller.com> (http://shannonmoeller.com)",
  "main": "dist/toga.js",
  "bin": {
    "toga": "dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/togajs/toga.git"
  },
  "dependencies": {
    "duplexify": "^3.4.2",
    "find-config": "^0.3.0",
    "merge-stream": "^0.1.8",
    "through2": "^2.0.0",
    "vinyl-fs": "^1.0.0",
    "yargs": "^3.14.0"
  },
  "devDependencies": {
    "babel": "^5.6.14",
    "babel-eslint": "^3.1.20",
    "babel-istanbul": "^0.2.9",
    "coveralls": "^2.11.2",
    "eslint": "^0.24.0",
    "expect": "^1.6.0",
    "mocha": "^2.2.5",
    "mtil": "^0.1.3",
    "nodemon": "^1.3.7",
    "stream-array": "^1.1.0"
  },
  "scripts": {
    "all": "npm run lint && npm run test && npm run build",
    "build": "babel src --out-dir dist",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "lint": "eslint src/*.js test/*.js",
    "test": "babel-istanbul cover -i src/$npm_package_name.js ./node_modules/.bin/_mocha -- test/*.js",
    "watch": "nodemon --exec 'npm run test' --watch src --watch test"
  }
}
